extends layout
block content
  h1= title
  - let items = costumes;
  - let destination = `/costume/create`
  button.btn(class="btn-dark ml-1", onclick=`dispatch('${destination}')`) Create
  div(class="container-fluid")
    div(class="row m-1")
      each item in items
        - let destination1 = `dispatch(\"/costume/update?id=${item._id}\")`
        - let destination2 = `dispatch(\"/costume/detail?id=${item._id}\")`
        - let destination3 = `dispatch(\"/costume/delete?id=${item._id}\")`
        div(class="row-sm-2", class="m-1") 
          | Item #{item.costume_type}(#{item.size}) is #{item.cost}
          button.btn(class="btn-primary ml-1", onclick=destination1) Update
          button.btn(class="btn-primary ml-1", onclick=destination2) View
          button.btn(class="btn-primary ml-1", onclick=destination3) Delete
  script.
    function dispatch(path){
      window.location.href=path
    }
